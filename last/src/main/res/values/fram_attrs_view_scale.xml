<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="scale" format="float" /><!--宽高比-->
    <attr name="known" format="enum"><!--已知宽或高-->
        <enum name="width" value="1" />
        <enum name="height" value="2" />
    </attr>

    <!-- ScaleFramelayout -->
    <declare-styleable name="ScaleFramelayout">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- ScaleRadioButton -->
    <declare-styleable name="ScaleRadioButton">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- LinearLayout -->
    <declare-styleable name="ScaleLinearLayout">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- RelativeLayout -->
    <declare-styleable name="ScaleRelativeLayout">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- TextView -->
    <declare-styleable name="ScaleTextView">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- ImageView -->
    <declare-styleable name="ScaleImageView">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>

    <!-- View -->
    <declare-styleable name="ScaleView">
        <attr name="scale" />
        <attr name="known" />
    </declare-styleable>


</resources>